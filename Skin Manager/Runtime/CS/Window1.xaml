<Window
    x:Class="SkinManagerDemo_2008.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:SkinManagerDemo_2008"
    xmlns:skinManager="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    Name="window"
    Title="MS Controls"
    Width="1300"
    Height="700"
    skinManager:SfSkinManager.VisualStyle="{Binding ElementName=comboVisualStyle, Path=SelectedValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
    Icon="/Image/App.ico"
    WindowState="Maximized">
    <Window.DataContext>
        <local:ViewModel />
    </Window.DataContext>
    <Window.Resources>
        <ObjectDataProvider
            x:Key="Themes"
            MethodName="GetValues"
            ObjectType="{x:Type system:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="skinManager:VisualStyles" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>
    <Grid Name="mainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid Name="menuGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Menu Name="menu">
                    <MenuItem Header="_File">
                        <MenuItem Header="New">
                            <MenuItem Name="app" Header="Application" />
                        </MenuItem>
                        <MenuItem Header="Open">
                            <MenuItem
                                Name="item"
                                Command="{Binding HomeCommand}"
                                Header="Home" />
                        </MenuItem>
                        <MenuItem
                            Name="save"
                            Command="{Binding SaveCommand}"
                            Header="Save" />
                        <Separator />
                        <MenuItem
                            Name="pagesetup"
                            Command="{Binding PageSetUpCommand}"
                            Header="Page Setup" />
                        <MenuItem
                            Name="print"
                            Command="{Binding PrintCommand}"
                            Header="Print" />
                        <MenuItem
                            Name="exit"
                            Command="{Binding ExitCommand}"
                            Header="Exit" />
                    </MenuItem>
                    <MenuItem Header="_Edit">
                        <MenuItem
                            Name="cut"
                            Command="{Binding CutCommand}"
                            Header="Cut" />
                        <MenuItem
                            Name="copy"
                            Command="{Binding CopyCommand}"
                            Header="Copy" />
                        <MenuItem
                            Name="paste"
                            Command="{Binding PasteCommand}"
                            Header="Paste" />
                        <MenuItem
                            Name="selectAll"
                            Command="{Binding SelectAllCommand}"
                            Header="Select All" />
                    </MenuItem>
                    <MenuItem Header="_View">
                        <MenuItem
                            Name="software"
                            Header="Software Jobs"
                            IsCheckable="True" />
                        <MenuItem
                            Name="hardware"
                            Header="Hardware Jobs"
                            IsCheckable="True" />
                        <MenuItem
                            Name="callCenter"
                            Header="Call Center Jobs"
                            IsCheckable="True" />
                        <MenuItem
                            Name="bpo"
                            Header="BPO Jobs"
                            IsCheckable="True" />
                        <MenuItem
                            Name="faculty"
                            Header="Faculty Jobs"
                            IsCheckable="True" />
                        <MenuItem
                            Name="other"
                            Header="Other Jobs"
                            IsCheckable="True" />
                    </MenuItem>
                    <MenuItem Header="_Help">
                        <MenuItem
                            Name="contactUS"
                            Command="{Binding ContactUsCommand}"
                            Header="Contact Us" />
                        <MenuItem
                            Name="aboutUS"
                            Command="{Binding AboutUsCommand}"
                            Header="About Us" />
                    </MenuItem>
                </Menu>
            </Grid>
            <ToolBarTray Name="toolbar" Grid.Row="1">
                <ToolBar Band="1" BandIndex="1">
                    <Button
                        Name="open"
                        Margin="2,0,0,0"
                        Command="{Binding OpenCommand}"
                        ToolTip="Open">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <Image
                                    Width="14"
                                    Height="14"
                                    Margin="2"
                                    Source="/Image/open.png" />
                                <TextBlock Margin="2">Open</TextBlock>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <Button
                        Name="home"
                        Margin="2,0,0,0"
                        Command="{Binding HomeCommand}"
                        ToolTip="Home">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <Image
                                    Width="14"
                                    Height="14"
                                    Margin="2"
                                    Source="/Image/home.gif" />
                                <TextBlock Margin="2">Home</TextBlock>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <Button
                        Name="headerSave"
                        Margin="2,0,0,0"
                        Command="{Binding SaveCommand}"
                        ToolTip="Save">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <Image
                                    Width="14"
                                    Height="14"
                                    Margin="2"
                                    Source="/Image/disk_blue.png" />
                                <TextBlock Margin="2">Save</TextBlock>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <Separator />
                    <Button
                        Name="headerCut"
                        Margin="4,0,0,0"
                        Command="{Binding CutCommand}"
                        ToolTip="Cut">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <Image
                                    Width="14"
                                    Height="14"
                                    Margin="2"
                                    Source="/Image/cut.gif" />
                                <TextBlock Margin="2">Cut</TextBlock>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <Button
                        Name="headerCopy"
                        Margin="2,0,0,0"
                        Command="{Binding CopyCommand}"
                        ToolTip="Copy">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <Image
                                    Width="14"
                                    Height="14"
                                    Margin="2"
                                    Source="/Image/copy.png" />
                                <TextBlock Margin="2">Copy</TextBlock>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <Button
                        Name="headerPaste"
                        Margin="2,0,0,0"
                        Command="{Binding PasteCommand}"
                        ToolTip="Paste">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <Image
                                    Width="14"
                                    Height="14"
                                    Margin="2"
                                    Source="/Image/paste.png" />
                                <TextBlock Margin="2">Paste</TextBlock>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <Button
                        x:Name="headerHelp"
                        Margin="2,0,0,0"
                        Command="{Binding HelpCommand}"
                        ToolTip="Help">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <Image
                                    Width="14"
                                    Height="14"
                                    Source="/Image/help.gif" />
                                <TextBlock Margin="2">Help</TextBlock>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </ToolBar>
            </ToolBarTray>
        </Grid>
        <Border
            Grid.Row="1"
            BorderBrush="#67FFFFFF"
            BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2.0*" />
                    <ColumnDefinition Width="6.0*" />
                    <ColumnDefinition Width="2.0*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Border
                    Name="BorderLeft"
                    Margin="2"
                    BorderBrush="#99000000"
                    BorderThickness="1">
                    <ScrollViewer
                        Name="scrollviewer1"
                        HorizontalScrollBarVisibility="Auto"
                        VerticalScrollBarVisibility="Auto">
                        <StackPanel Orientation="Vertical">
                            <GroupBox
                                Margin="5,10,10,10"
                                Header="Job Category List"
                                IsEnabled="{Binding ElementName=rbAllJob, Path=IsChecked}">
                                <TreeView Name="treeview" Margin="2">
                                    <TreeViewItem Header="Category" IsExpanded="True">
                                        <TreeViewItem
                                            x:Name="treeSoftware"
                                            Header="Software"
                                            Tag="0" />
                                        <TreeViewItem
                                            x:Name="treeHardware"
                                            Header="Hardware"
                                            Tag="1" />
                                        <TreeViewItem
                                            x:Name="treeCallCenter"
                                            Header="Call Center"
                                            Tag="2" />
                                        <TreeViewItem
                                            x:Name="treeBPO"
                                            Header="BPO"
                                            Tag="3" />
                                        <TreeViewItem
                                            x:Name="treeFaculty"
                                            Header="Faculty"
                                            Tag="4" />
                                        <TreeViewItem
                                            x:Name="treeOthers"
                                            Header="Others"
                                            Tag="5" />
                                    </TreeViewItem>
                                </TreeView>
                            </GroupBox>
                            <Expander
                                Margin="5,10,10,10"
                                Header="Show Job"
                                IsExpanded="True">
                                <StackPanel>
                                    <RadioButton
                                        Name="rbAllJob"
                                        Margin="4"
                                        Command="{Binding VacancyCommand}"
                                        Content="All Vacancies"
                                        IsChecked="True" />
                                    <RadioButton
                                        Name="rbTodayJob"
                                        Margin="4"
                                        Command="{Binding InterviewCommand}"
                                        Content="Today's Interview" />
                                </StackPanel>
                            </Expander>
                            <Expander
                                Margin="5,10,10,10"
                                Header="Show Columns"
                                IsExpanded="True">
                                <StackPanel>
                                    <CheckBox
                                        x:Name="jobIDCheckBox"
                                        Margin="4"
                                        Content="Job Id"
                                        IsChecked="True" />
                                    <CheckBox
                                        x:Name="companyIDCheckBox"
                                        Margin="4"
                                        Content="Company ID"
                                        IsChecked="True" />
                                    <CheckBox
                                        x:Name="descriptionCheckBox"
                                        Margin="4"
                                        Content="Job Description"
                                        IsChecked="True" />
                                    <CheckBox
                                        x:Name="vacancyCheckBox"
                                        Margin="4"
                                        Content="No. of Vacancies"
                                        IsChecked="True" />
                                    <CheckBox
                                        x:Name="dateCheckBox"
                                        Margin="4"
                                        Content="Date of Interview"
                                        IsChecked="True" />
                                </StackPanel>
                            </Expander>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
                <Border
                    Name="middleBorder"
                    Grid.Column="1"
                    Margin="1,1,1,1"
                    BorderBrush="#99000000"
                    BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="4.0*" />
                            <RowDefinition Height="6.0*" />
                        </Grid.RowDefinitions>
                        <Border
                            Name="applicationBorder"
                            Margin="10"
                            BorderBrush="#99000000"
                            BorderThickness="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Label
                                    BorderBrush="#99000000"
                                    BorderThickness="0,0,0,1"
                                    FontSize="14"
                                    FontWeight="Bold">
                                    Application
                                </Label>
                                <Grid Grid.Row="1" Margin="10">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="9.0*" />
                                        <RowDefinition Height="1.0*" />
                                    </Grid.RowDefinitions>
                                    <StackPanel Grid.Row="1" Orientation="Horizontal">
                                        <StackPanel Margin="10,10,1,10" Orientation="Vertical">
                                            <TextBlock
                                                Height="22"
                                                Margin="6"
                                                VerticalAlignment="Center">
                                                Name of
                                                the Candidate
                                            </TextBlock>
                                            <TextBlock
                                                Height="23"
                                                Margin="6"
                                                VerticalAlignment="Center">
                                                Name
                                                of University
                                            </TextBlock>
                                            <TextBlock
                                                Height="23"
                                                Margin="6"
                                                VerticalAlignment="Center">
                                                Date of Birth
                                            </TextBlock>
                                            <TextBlock
                                                Height="23"
                                                Margin="6"
                                                VerticalAlignment="Center">
                                                Address for Communication
                                            </TextBlock>
                                            <TextBlock
                                                Height="23"
                                                Margin="6"
                                                VerticalAlignment="Center">
                                                Job Category
                                            </TextBlock>
                                            <TextBlock Height="23" Margin="6">Technical Skills</TextBlock>
                                        </StackPanel>
                                        <StackPanel
                                            Margin="3,10,10,10"
                                            HorizontalAlignment="Left"
                                            Orientation="Vertical">
                                            <TextBox
                                                Name="textboxname"
                                                Width="200"
                                                Height="23"
                                                Margin="6"
                                                HorizontalAlignment="Left" />
                                            <TextBox
                                                Width="200"
                                                Height="23"
                                                Margin="6"
                                                HorizontalAlignment="Left" />
                                            <TextBox
                                                Width="200"
                                                Height="23"
                                                Margin="6"
                                                HorizontalAlignment="Left" />
                                            <TextBox
                                                Width="200"
                                                Height="23"
                                                Margin="6"
                                                HorizontalAlignment="Left" />
                                            <StackPanel Grid.Row="9">
                                                <ComboBox
                                                    Name="category"
                                                    Width="150"
                                                    Height="23"
                                                    Margin="6"
                                                    HorizontalAlignment="Left"
                                                    SelectedIndex="0">
                                                    <ComboBoxItem>Software</ComboBoxItem>
                                                    <ComboBoxItem>Hardware</ComboBoxItem>
                                                    <ComboBoxItem>Call Center</ComboBoxItem>
                                                    <ComboBoxItem>BPO</ComboBoxItem>
                                                    <ComboBoxItem>Faculties</ComboBoxItem>
                                                    <ComboBoxItem>Others</ComboBoxItem>
                                                </ComboBox>
                                            </StackPanel>
                                            <StackPanel Grid.Row="10" Orientation="Horizontal">
                                                <WrapPanel Orientation="Vertical">
                                                    <CheckBox Margin="5">.NET</CheckBox>
                                                    <CheckBox Margin="5">Java</CheckBox>
                                                    <CheckBox Margin="5">J2EE</CheckBox>
                                                    <CheckBox Margin="5">Visual Basic</CheckBox>
                                                </WrapPanel>
                                                <WrapPanel Orientation="Vertical">
                                                    <CheckBox Margin="5">COBOL</CheckBox>
                                                    <CheckBox Margin="5">C</CheckBox>
                                                    <CheckBox Margin="5">C++</CheckBox>
                                                    <CheckBox Margin="5">Pascal</CheckBox>
                                                </WrapPanel>
                                            </StackPanel>
                                        </StackPanel>
                                        <StackPanel Margin="10,10,1,10" Orientation="Vertical">
                                            <TextBlock Height="23" Margin="6">
                                                Highest Qualification
                                            </TextBlock>
                                            <TextBlock Height="23" Margin="6">
                                                Percentage Scored
                                            </TextBlock>
                                            <TextBlock Height="23" Margin="6">
                                                Gender
                                            </TextBlock>
                                            <TextBlock Height="23" Margin="6">
                                                Mobile No.
                                            </TextBlock>
                                            <TextBlock Height="23" Margin="6">
                                                Years of Experience
                                            </TextBlock>
                                            <TextBlock Height="23" Margin="6">
                                                Area of Interest in Sports
                                            </TextBlock>
                                        </StackPanel>
                                        <StackPanel Margin="3,10,10,10" Orientation="Vertical">
                                            <TextBox
                                                Width="200"
                                                Height="23"
                                                Margin="6"
                                                HorizontalAlignment="Left" />
                                            <TextBox
                                                Width="200"
                                                Height="23"
                                                Margin="6"
                                                HorizontalAlignment="Left" />
                                            <WrapPanel
                                                Grid.Row="7"
                                                Height="23"
                                                Orientation="Horizontal">
                                                <RadioButton Name="male" Margin="6,0,6,4">
                                                    Male
                                                </RadioButton>
                                                <RadioButton Name="feMale" Margin="6,0,6,4">
                                                    Female
                                                </RadioButton>
                                            </WrapPanel>
                                            <TextBox
                                                Width="200"
                                                Height="23"
                                                Margin="6"
                                                HorizontalAlignment="Left" />
                                            <TextBox
                                                Width="200"
                                                Height="23"
                                                Margin="6"
                                                HorizontalAlignment="Left" />
                                            <WrapPanel Orientation="Vertical">
                                                <CheckBox Name="cricket" Margin="5">
                                                    Cricket
                                                </CheckBox>
                                                <CheckBox Name="volleyBall" Margin="5">
                                                    Volleyball
                                                </CheckBox>
                                                <CheckBox Name="basketBall" Margin="5">
                                                    Basketball
                                                </CheckBox>
                                                <CheckBox Name="others" Margin="5">
                                                    Others
                                                </CheckBox>
                                            </WrapPanel>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Border>
                        <Border
                            Grid.Row="1"
                            Margin="10"
                            BorderBrush="#99000000"
                            BorderThickness="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Label
                                    BorderBrush="#99000000"
                                    BorderThickness="0,0,0,1"
                                    FontSize="14"
                                    FontWeight="Bold">
                                    Interview Details
                                </Label>
                                <Border Grid.Row="1">
                                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                                        <StackPanel>
                                            <TabControl
                                                Name="firstTabControl"
                                                Margin="0,5,0,0"
                                                SelectedIndex="{Binding ElementName=category, Path=SelectedIndex}"
                                                Visibility="{Binding FirstTabVisibility}">
                                                <TabItem
                                                    x:Name="softwareTab"
                                                    Width="80"
                                                    IsSelected="{Binding ElementName=software, Path=IsChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                                    <TabItem.Header>
                                                        Software
                                                    </TabItem.Header>
                                                    <StackPanel Orientation="Vertical">
                                                        <TextBlock
                                                            Margin="0,20,0,0"
                                                            HorizontalAlignment="Center"
                                                            FontSize="18"
                                                            FontWeight="Bold">
                                                            Interview for
                                                            Software Engineers
                                                        </TextBlock>
                                                        <ListView
                                                            Name="listView"
                                                            Margin="0,30,0,0"
                                                            HorizontalAlignment="Center"
                                                            ItemsSource="{Binding JobInformation}">
                                                            <ListView.Resources>
                                                                <local:ColumnWidthConverter x:Key="HideGroupViewColumns" />
                                                            </ListView.Resources>
                                                            <ListView.View>
                                                                <GridView>
                                                                    <GridViewColumn
                                                                        x:Name="jobIDColumn"
                                                                        Width="{Binding Path=IsChecked, ElementName=jobIDCheckBox, Converter={StaticResource HideGroupViewColumns}, ConverterParameter=140}"
                                                                        DisplayMemberBinding="{Binding JobID}"
                                                                        Header="Job ID" />
                                                                    <GridViewColumn
                                                                        x:Name="companyIDColumn"
                                                                        Width="{Binding Path=IsChecked, ElementName=companyIDCheckBox, Converter={StaticResource HideGroupViewColumns}, ConverterParameter=140}"
                                                                        DisplayMemberBinding="{Binding CompanyID}"
                                                                        Header="Company ID" />
                                                                    <GridViewColumn
                                                                        x:Name="jobDescriptionColumn"
                                                                        Width="{Binding Path=IsChecked, ElementName=descriptionCheckBox, Converter={StaticResource HideGroupViewColumns}, ConverterParameter=240}"
                                                                        DisplayMemberBinding="{Binding JobDescription}"
                                                                        Header="Job Description" />
                                                                    <GridViewColumn
                                                                        x:Name="jobVacencyColumn"
                                                                        Width="{Binding Path=IsChecked, ElementName=vacancyCheckBox, Converter={StaticResource HideGroupViewColumns}, ConverterParameter=140}"
                                                                        DisplayMemberBinding="{Binding Vacancy}"
                                                                        Header="No. of Vacancy" />
                                                                    <GridViewColumn
                                                                        x:Name="jobDateColumn"
                                                                        Width="{Binding Path=IsChecked, ElementName=dateCheckBox, Converter={StaticResource HideGroupViewColumns}, ConverterParameter=140}"
                                                                        DisplayMemberBinding="{Binding Date}"
                                                                        Header="Date of Interview" />
                                                                </GridView>
                                                            </ListView.View>
                                                            <ListView.ContextMenu>
                                                                <ContextMenu>
                                                                    <MenuItem Header="Cut" />
                                                                    <MenuItem Header="Copy" />
                                                                    <MenuItem Header="Paste" />
                                                                </ContextMenu>
                                                            </ListView.ContextMenu>
                                                        </ListView>

                                                    </StackPanel>
                                                </TabItem>
                                                <TabItem
                                                    x:Name="hardwareTab"
                                                    Width="80"
                                                    IsSelected="{Binding ElementName=hardware, Path=IsChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                                    <TabItem.Header>
                                                        Hardware
                                                    </TabItem.Header>
                                                    <StackPanel Orientation="Vertical">
                                                        <TextBlock
                                                            Margin="0,30,0,0"
                                                            HorizontalAlignment="Center"
                                                            FontSize="18"
                                                            FontWeight="Bold">
                                                            Interview
                                                            for Hardware Engineers
                                                        </TextBlock>
                                                        <ListView
                                                            Name="secondListView"
                                                            Margin="0,30,0,0"
                                                            HorizontalAlignment="Center"
                                                            ItemsSource="{Binding JobInformation}">
                                                            <ListView.Resources>
                                                                <local:ColumnWidthConverter x:Key="HideGroupViewColumns" />
                                                            </ListView.Resources>
                                                            <ListView.View>
                                                                <GridView>
                                                                    <GridViewColumn
                                                                        Width="{Binding Path=IsChecked, ElementName=jobIDCheckBox, Converter={StaticResource HideGroupViewColumns}, ConverterParameter=140}"
                                                                        DisplayMemberBinding="{Binding SecondJobID}"
                                                                        Header="Job ID" />
                                                                    <GridViewColumn
                                                                        Width="{Binding Path=IsChecked, ElementName=companyIDCheckBox, Converter={StaticResource HideGroupViewColumns}, ConverterParameter=140}"
                                                                        DisplayMemberBinding="{Binding SecondCompanyID}"
                                                                        Header="Company ID" />
                                                                    <GridViewColumn
                                                                        Width="{Binding Path=IsChecked, ElementName=descriptionCheckBox, Converter={StaticResource HideGroupViewColumns}, ConverterParameter=240}"
                                                                        DisplayMemberBinding="{Binding SecondJobDescription}"
                                                                        Header="Job Description" />
                                                                    <GridViewColumn
                                                                        Width="{Binding Path=IsChecked, ElementName=vacancyCheckBox, Converter={StaticResource HideGroupViewColumns}, ConverterParameter=140}"
                                                                        DisplayMemberBinding="{Binding SecondVacancy}"
                                                                        Header="No. of Vacancy" />
                                                                    <GridViewColumn
                                                                        Width="{Binding Path=IsChecked, ElementName=dateCheckBox, Converter={StaticResource HideGroupViewColumns}, ConverterParameter=140}"
                                                                        DisplayMemberBinding="{Binding SecondDate}"
                                                                        Header="Date of Interview" />
                                                                </GridView>
                                                            </ListView.View>
                                                            <ListView.ContextMenu>
                                                                <ContextMenu>
                                                                    <MenuItem Header="Cut" />
                                                                    <MenuItem Header="Copy" />
                                                                    <MenuItem Header="Paste" />
                                                                </ContextMenu>
                                                            </ListView.ContextMenu>
                                                        </ListView>
                                                    </StackPanel>
                                                </TabItem>
                                                <TabItem
                                                    x:Name="callCenterTab"
                                                    Width="85"
                                                    IsSelected="{Binding ElementName=callCenter, Path=IsChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                                    <TabItem.Header>
                                                        Call Center
                                                    </TabItem.Header>
                                                    <StackPanel Orientation="Vertical">
                                                        <TextBlock
                                                            Margin="0,30,0,0"
                                                            HorizontalAlignment="Center"
                                                            FontSize="18"
                                                            FontWeight="Bold">
                                                            Interview for Call Centers
                                                        </TextBlock>
                                                        <ListView
                                                            Name="thirdListView"
                                                            Margin="0,30,0,0"
                                                            HorizontalAlignment="Center"
                                                            ItemsSource="{Binding JobInformation}">
                                                            <ListView.Resources>
                                                                <local:ColumnWidthConverter x:Key="HideGroupViewColumns" />
                                                            </ListView.Resources>
                                                            <ListView.View>
                                                                <GridView>
                                                                    <GridViewColumn
                                                                        Width="{Binding Path=IsChecked, ElementName=jobIDCheckBox, Converter={StaticResource HideGroupViewColumns}, ConverterParameter=140}"
                                                                        DisplayMemberBinding="{Binding ThirdJobID}"
                                                                        Header="Job ID" />
                                                                    <GridViewColumn
                                                                        Width="{Binding Path=IsChecked, ElementName=companyIDCheckBox, Converter={StaticResource HideGroupViewColumns}, ConverterParameter=140}"
                                                                        DisplayMemberBinding="{Binding ThirdCompanyID}"
                                                                        Header="Company ID" />
                                                                    <GridViewColumn
                                                                        Width="{Binding Path=IsChecked, ElementName=descriptionCheckBox, Converter={StaticResource HideGroupViewColumns}, ConverterParameter=240}"
                                                                        DisplayMemberBinding="{Binding ThirdJobDescription}"
                                                                        Header="Job Description" />
                                                                    <GridViewColumn
                                                                        Width="{Binding Path=IsChecked, ElementName=vacancyCheckBox, Converter={StaticResource HideGroupViewColumns}, ConverterParameter=140}"
                                                                        DisplayMemberBinding="{Binding ThirdVacancy}"
                                                                        Header="No. of Vacancy" />
                                                                    <GridViewColumn
                                                                        Width="{Binding Path=IsChecked, ElementName=dateCheckBox, Converter={StaticResource HideGroupViewColumns}, ConverterParameter=140}"
                                                                        DisplayMemberBinding="{Binding ThirdDate}"
                                                                        Header="Date of Interview" />
                                                                </GridView>
                                                            </ListView.View>
                                                            <ListView.ContextMenu>
                                                                <ContextMenu>
                                                                    <MenuItem Header="Cut" />
                                                                    <MenuItem Header="Copy" />
                                                                    <MenuItem Header="Paste" />
                                                                </ContextMenu>
                                                            </ListView.ContextMenu>
                                                        </ListView>
                                                    </StackPanel>
                                                </TabItem>
                                                <TabItem Width="50" IsSelected="{Binding ElementName=bpo, Path=IsChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                                    <TabItem.Header>
                                                        BPO
                                                    </TabItem.Header>
                                                    <StackPanel Orientation="Vertical">
                                                        <TextBlock
                                                            Margin="0,30,0,0"
                                                            HorizontalAlignment="Center"
                                                            FontSize="18"
                                                            FontWeight="Bold">
                                                            Interview
                                                            for BPOs
                                                        </TextBlock>
                                                        <ListView
                                                            Name="fourthListView"
                                                            Margin="0,30,0,0"
                                                            HorizontalAlignment="Center"
