<democommon:DemoControl
    x:Class="syncfusion.chartdemos.wpf.FastLineChartDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chart="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
    xmlns:democommon="clr-namespace:syncfusion.demoscommon.wpf;assembly=syncfusion.demoscommon.wpf"
    xmlns:local="clr-namespace:syncfusion.chartdemos.wpf"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF">

    <democommon:DemoControl.DataContext>
        <local:FastLineChartViewModel />
    </democommon:DemoControl.DataContext>

    <democommon:DemoControl.Resources>

        <Style TargetType="{x:Type ContentControl}">
            <Setter Property="ContentStringFormat" Value="N2"/>
        </Style>

        <DataTemplate x:Key="tooltipTemplate">
            <Border
                Padding="4"
                Background="#FFFFFFFF"
                BorderBrush="#FF808080"
                BorderThickness="1"
                CornerRadius="3">
                <ContentControl
                    Content="{Binding YData}"
                    FontSize="15"
                    Foreground="Black"/>
            </Border>
        </DataTemplate>

    </democommon:DemoControl.Resources>

    <Grid>
        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="../../Resources/ColorModel.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>
        
        <chart:SfChart
            x:Name="FastLine"
            Margin="10"
            HorizontalAlignment="Center"
            ColorModel="{StaticResource CustomColor}"
            Palette="Custom"
            Header="Weather Forecasting">

            <chart:SfChart.PrimaryAxis>
                <chart:DateTimeAxis
                    x:Name="axis1"
                    Header="Date"
                    LabelFormat="MMM yyyy"
                    IntervalType="Months" Interval="10"
                    ShowGridLines="False"/>
            </chart:SfChart.PrimaryAxis>

            <chart:SfChart.SecondaryAxis>
                <chart:NumericalAxis
                    Header="Temperature(In Fahrenheit)"/>
            </chart:SfChart.SecondaryAxis>

            <chart:FastLineSeries
                x:Name="FastLineSeries"
                EnableAnimation="True"
                ItemsSource="{Binding DataCollection}"
                ShowTooltip="True"
                TooltipTemplate="{StaticResource tooltipTemplate}"
                XBindingPath="Date"
                YBindingPath="Value" />

        </chart:SfChart>
    </Grid>
</democommon:DemoControl>
