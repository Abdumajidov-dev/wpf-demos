<Window
    x:Class="SfTreeViewDemo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:local="clr-namespace:SfTreeViewDemo"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    Title="Getting Started"
    Width="800"
    Height="600"
    skin:SfSkinManager.VisualStyle="MaterialLight"
    Icon="App.ico"
    WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <local:ViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>

        <Grid>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <syncfusion:SfTreeView
                    x:Name="treeView"
                    Margin="10"
                    AutoExpandMode="AllNodes"
                    BorderBrush="LightGray"
                    BorderThickness="1"
                    ChildPropertyName="Models"
                    ExpandActionTrigger="Node"
                    FocusVisualStyle="{x:Null}"
                    IsAnimationEnabled="True"
                    ItemHeight="30"
                    ItemsSource="{Binding Items}" FullRowSelect="True">

                    <syncfusion:SfTreeView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Header}" 
                                       VerticalAlignment="Center"
                                       FontSize="12"
                                       Foreground="Black"/>
                        </DataTemplate>
                    </syncfusion:SfTreeView.ItemTemplate>
                    <i:Interaction.Behaviors>
                        <local:SelectionChangedBehavior />
                    </i:Interaction.Behaviors>
                </syncfusion:SfTreeView>

                <Grid Grid.Row="1" Visibility="{Binding Visibility, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <Border
                        Margin="10,-10,10,10"
                        BorderBrush="LightGray"
                        BorderThickness="1,0,1,1"
                        DataContext="{Binding Path=SelectedItem, ElementName=treeView}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <StackPanel Margin="10,0,0,0" HorizontalAlignment="Left">
                                <Image
                                    Width="150"
                                    Height="150"
                                    Source="{Binding Image}" />
                            </StackPanel>
                            <Grid
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center">
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Margin="10"
                                    VerticalAlignment="Center"
                                    FontWeight="Bold"
                                    Text="Product Type :" />
                                <TextBlock
                                    Grid.Column="1"
                                    Margin="10"
                                    VerticalAlignment="Center"
                                    Text="{Binding Product}" />
                                <TextBlock
                                    Grid.Row="1"
                                    Margin="10"
                                    VerticalAlignment="Center"
                                    FontWeight="Bold"
                                    Text="Brand : " />
                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Margin="10"
                                    VerticalAlignment="Center"
                                    Text="{Binding Brand}" />

                                <TextBlock
                                    Grid.Row="2"
                                    Margin="10"
                                    VerticalAlignment="Center"
                                    FontWeight="Bold"
                                    Text="Model :" />
                                <TextBlock
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Margin="10"
                                    VerticalAlignment="Center"
                                    Text="{Binding Header}" />
                                <TextBlock
                                    Grid.Row="3"
                                    Margin="10"
                                    VerticalAlignment="Center"
                                    FontWeight="Bold"
                                    Text="Price :" />
                                <TextBlock
                                    Grid.Row="3"
                                    Grid.Column="1"
                                    Margin="10"
                                    VerticalAlignment="Center"
                                    Text="{Binding Price}" />
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Grid>

        <Grid Grid.Column="1">
            <StackPanel Margin="10">
                <Label
                    x:Name="optionsLbl"
                    Margin="5"
                    Content="Options"
                    FontSize="14"
                    FontWeight="Bold" />
                <CheckBox
                    x:Name="showlines"
                    Margin="5"
                    HorizontalAlignment="Left"
                    Content="Show Lines"
                    IsChecked="{Binding Path=ShowLines, ElementName=treeView}" />
                <CheckBox
                    Margin="5"
                    HorizontalAlignment="Left"
                    Content="Enable Animation"
                    IsChecked="{Binding Path=IsAnimationEnabled, ElementName=treeView}" />
                <Button
                    x:Name="expandBtn"
                    Width="150"
                    Height="25"
                    Margin="5"
                    HorizontalAlignment="Left"
                    Command="local:Commands.ExpandAllNodes"
                    CommandTarget="{Binding ElementName=treeView}"
                    Content="Expand All Nodes" />
                <Button
                    x:Name="collapseBtn"
                    Width="150"
                    Height="25"
                    Margin="5"
                    HorizontalAlignment="Left"
                    Command="local:Commands.CollapseAllNodes"
                    CommandTarget="{Binding ElementName=treeView}"
                    Content="Collapse All Nodes" />

            </StackPanel>
        </Grid>
    </Grid>
</Window>
