<syncfusion:ChromelessWindow
    x:Class="DragAndDropDemo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:DragAndDropDemo"
    xmlns:skin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    xmlns:treeview="clr-namespace:Syncfusion.UI.Xaml.TreeView;assembly=Syncfusion.SfTreeView.WPF"
    Title="Drag and Drop"
    Width="900"
    Height="600"
    skin:SfSkinManager.VisualStyle="MaterialLight"
    FontFamily="Calibri"
    FontSize="13"
    Icon="App.ico"
    UseNativeChrome="True"
    WindowStartupLocation="CenterScreen">

    <syncfusion:ChromelessWindow.DataContext>
        <local:ViewModel />
    </syncfusion:ChromelessWindow.DataContext>

    <syncfusion:ChromelessWindow.Resources>
        <DataTemplate x:Key="SfTreeView_ItemTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Image
                    Width="20"
                    VerticalAlignment="Center"
                    Source="{Binding Image}" />
                <TextBlock Grid.Column="1"
                    Margin="5,0,0,0"
                    VerticalAlignment="Center"
                    Text="{Binding Header}" />
            </Grid>
        </DataTemplate>

    </syncfusion:ChromelessWindow.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <!--  SfTreeView 1  -->
        <treeview:SfTreeView
            Name="sfTreeView1"
            Margin="10"
            AllowDragging="True"
            AllowDrop="True"
            AutoExpandMode="AllNodes"
            BorderBrush="LightGray"
            BorderThickness="1"
            ChildPropertyName="Childs"
            FocusVisualStyle="{x:Null}"
            FullRowSelect="True"
            ItemTemplate="{StaticResource SfTreeView_ItemTemplate}"
            ItemsSource="{Binding Nodes1}" />

        <!--  SfTreeView 2  -->
        <treeview:SfTreeView
            Name="sfTreeView2"
            Grid.Column="1"
            Margin="10"
            AllowDragging="True"
            AllowDrop="True"
            AutoExpandMode="AllNodes"
            BorderBrush="LightGray"
            BorderThickness="1"
            ChildPropertyName="Childs"
            FocusVisualStyle="{x:Null}"
            FullRowSelect="True"
            ItemTemplate="{StaticResource SfTreeView_ItemTemplate}"
            ItemsSource="{Binding Nodes2}" />
    </Grid>

</syncfusion:ChromelessWindow>
