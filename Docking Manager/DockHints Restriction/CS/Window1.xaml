<!--  Window for applying custom skins  -->
<Window
    x:Class="DockAbilityDemo.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:DockAbilityDemo"
    xmlns:sfskin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    x:Name="window1"
    Title="DockHints Restriction"
    Width="980"
    Height="640"
    sfskin:SfSkinManager.VisualStyle="MaterialLight"
    Icon="App.ico"
    WindowStartupLocation="CenterScreen">
    <Grid>
        <syncfusion:DockingManager
            x:Name="dockingManager"
            Grid.Row="1"
            EnableMouseHoverBackground="False"
            IsVS2010DraggingEnabled="True"
            PreviewDockHints="dockingManager_PreviewDockHints"
            UseDocumentContainer="True"
            UseNativeFloatWindow="True">
            <ContentControl
                x:Name="toolBox"
                syncfusion:DockingManager.DesiredHeightInDockedMode="200"
                syncfusion:DockingManager.DesiredWidthInDockedMode="200"
                syncfusion:DockingManager.Header="Toolbox"
                syncfusion:DockingManager.SideInDockedMode="Left">
                <TextBlock
                    Margin="10"
                    VerticalAlignment="Center"
                    FontSize="15"
                    FontStyle="Italic"
                    Foreground="Gray"
                    TextWrapping="Wrap">
                    The Left Dock hints will be visible here
                </TextBlock>
            </ContentControl>
            <ContentControl
                x:Name="serverExplorer"
                syncfusion:DockingManager.DesiredHeightInDockedMode="200"
                syncfusion:DockingManager.DesiredWidthInDockedMode="200"
                syncfusion:DockingManager.Header="Server Explorer"
                syncfusion:DockingManager.SideInDockedMode="Bottom"
                syncfusion:DockingManager.TargetNameInDockedMode="toolBox">
                <TextBlock
                    Margin="10"
                    VerticalAlignment="Center"
                    FontSize="15"
                    FontStyle="Italic"
                    Foreground="Gray"
                    TextWrapping="Wrap">
                    The Horizontal Dock hints will be visible here
                </TextBlock>
            </ContentControl>
            <ContentControl
                x:Name="bottomWindow"
                syncfusion:DockingManager.DesiredHeightInDockedMode="200"
                syncfusion:DockingManager.DesiredWidthInDockedMode="200"
                syncfusion:DockingManager.Header="Output"
                syncfusion:DockingManager.SideInDockedMode="Bottom">
                <TextBlock
                    Margin="10"
                    VerticalAlignment="Center"
                    FontSize="15"
                    FontStyle="Italic"
                    Foreground="Gray"
                    TextWrapping="Wrap">
                    All Dock hints will be visible here
                </TextBlock>
            </ContentControl>
            <ContentControl
                x:Name="tabbedWindow"
                syncfusion:DockingManager.DesiredHeightInDockedMode="200"
                syncfusion:DockingManager.DesiredWidthInDockedMode="200"
                syncfusion:DockingManager.Header="Error List"
                syncfusion:DockingManager.SideInDockedMode="Right"
                syncfusion:DockingManager.TargetNameInDockedMode="bottomWindow">
                <TextBlock
                    Margin="10"
                    VerticalAlignment="Center"
                    FontSize="15"
                    FontStyle="Italic"
                    Foreground="Gray"
                    TextWrapping="Wrap">
                    Center Dock hint will be visible here
                </TextBlock>
            </ContentControl>
            <ContentControl
                x:Name="solutionExplorer"
                syncfusion:DockingManager.DesiredHeightInDockedMode="200"
                syncfusion:DockingManager.DesiredWidthInDockedMode="200"
                syncfusion:DockingManager.Header="Solution Explorer"
                syncfusion:DockingManager.SideInDockedMode="Right">
                <TextBlock
                    Margin="10"
                    VerticalAlignment="Center"
                    FontSize="15"
                    FontStyle="Italic"
                    Foreground="Gray"
                    TextWrapping="Wrap">
                    The Top Dock hints will be visible here
                </TextBlock>
            </ContentControl>
            <ContentControl
                x:Name="teamExplorer"
                syncfusion:DockingManager.DesiredHeightInDockedMode="200"
                syncfusion:DockingManager.DesiredWidthInDockedMode="200"
                syncfusion:DockingManager.Header="Team Explorer"
                syncfusion:DockingManager.SideInDockedMode="Bottom"
                syncfusion:DockingManager.TargetNameInDockedMode="solutionExplorer">
                <TextBlock
                    Margin="10"
                    VerticalAlignment="Center"
                    FontSize="15"
                    FontStyle="Italic"
                    Foreground="Gray"
                    TextWrapping="Wrap">
                    Since the DockAbility is None, all the Dock hints will be collapsed here
                </TextBlock>
            </ContentControl>
            <ContentControl
                x:Name="properties"
                syncfusion:DockingManager.DesiredHeightInDockedMode="200"
                syncfusion:DockingManager.DesiredWidthInDockedMode="200"
                syncfusion:DockingManager.Header="Properties">
                <TextBlock
                    Margin="10"
                    VerticalAlignment="Center"
                    FontSize="15"
                    FontStyle="Italic"
                    Foreground="Gray"
                    TextWrapping="Wrap">
                    The window cannot be docked in any window through drag providers
                </TextBlock>
            </ContentControl>
            <ContentControl
                x:Name="integration"
                syncfusion:DockingManager.CanDock="False"
                syncfusion:DockingManager.Header="Mainwindow.cs"
                syncfusion:DockingManager.State="Document">
                <TextBlock
                    Margin="10"
                    VerticalAlignment="Center"
                    FontSize="15"
                    FontStyle="Italic"
                    Foreground="Gray"
                    TextWrapping="Wrap">
                    All side of Dock hints will be visible to make the window Dock
                </TextBlock>
            </ContentControl>
            <ContentControl
                x:Name="features"
                syncfusion:DockingManager.Header="Mainwindow.xaml.cs"
                syncfusion:DockingManager.State="Document">
                <TextBlock
                    Margin="10"
                    VerticalAlignment="Center"
                    FontSize="15"
                    FontStyle="Italic"
                    Foreground="Gray"
                    TextWrapping="Wrap">
                    Top, Bottom, Right and Left Dock hints will be visible here
                </TextBlock>
            </ContentControl>
            <ContentControl
                x:Name="startPage"
                syncfusion:DockingManager.Header="Start Page"
                syncfusion:DockingManager.State="Document">
                <TextBlock
                    Margin="10"
                    VerticalAlignment="Center"
                    FontSize="15"
                    FontStyle="Italic"
                    Foreground="Gray"
                    TextWrapping="Wrap">
                    Document hints will be visible here
                </TextBlock>
            </ContentControl>
        </syncfusion:DockingManager>
    </Grid>
</Window>
