<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DataTemplate x:Key="AM">
        <Grid>
            <Image Source="/TemplateCustomization;component/Assets/sun.png" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="5"
                       Stretch="Uniform" Width="16"/>
            <TextBlock FontWeight="Light" FontSize="28" HorizontalAlignment="Center" Text="{Binding AmPmString}" VerticalAlignment="Bottom"/>
        </Grid>
    </DataTemplate>
    <DataTemplate x:Key="PM">
        <Grid>
            <Image Source="/TemplateCustomization;component/Assets/moon.png" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="5"
                       Stretch="Uniform" Width="16"/>
            <TextBlock FontWeight="Light" FontSize="28" HorizontalAlignment="Center" Text="{Binding AmPmString}" VerticalAlignment="Bottom"/>
        </Grid>
    </DataTemplate>

</ResourceDictionary>