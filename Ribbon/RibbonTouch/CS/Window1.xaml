<syncfusion:RibbonWindow
    x:Class="RibbonSample.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:interactivity="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
    xmlns:local="clr-namespace:RibbonSample"
    xmlns:skinManager="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    x:Name="ribbonwindow"
    Title="Untitled 1 - Ribbon Control"
    Width="1100"
    Height="650"
    skinManager:SfSkinManager.VisualStyle="MaterialLight"
    syncfusion:SkinStorage.EnableTouch="False"
    AllowsTransparency="True"
    FlowDirection="{Binding FlowDirectionProperty}"
    Icon="App.ico"
    IsGlassActive="False"
    Office2010Icon="/Resources/syncfusion.png"
    SnapsToDevicePixels="True"
    TitleBarPatternImage="{Binding ElementName=titleImageComboBox, Path=SelectedItem.Tag}"
    TitleTextAlignment="Center"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    WindowStyle="None">
    <interactivity:Interaction.Triggers>
        <interactivity:EventTrigger EventName="Closed">
            <interactivity:InvokeCommandAction Command="{Binding Path=MainWindowClosedCommand}" />
        </interactivity:EventTrigger>
    </interactivity:Interaction.Triggers>
    <Window.DataContext>
        <local:ViewModel />
    </Window.DataContext>
    <Window.Resources>
        <syncfusion:ColorToBrushConverter x:Key="ColorToBrushConverter" />
        <DataTemplate x:Key="smallSlideTemplate">
            <Grid Margin="0,5,5,5">
                <Rectangle Fill="Transparent" Stroke="Red" />
                <StackPanel
                    Width="190"
                    Height="100"
                    Margin="1,1,1,1"
                    HorizontalAlignment="Left"
                    Background="White"
                    Orientation="Horizontal">
                    <Grid Height="120" Background="White">
                        <Image
                            Margin="2"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Bottom"
                            Source="/images/template.png" />
                        <TextBlock
                            Margin="4,0,0,0"
                            FontSize="16"
                            Foreground="Red"
                            Text="{Binding SlideNumber}" />
                        <TextBlock
                            Margin="0,20,0,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            FontSize="10"
                            Foreground="DarkBlue"
                            Text="{Binding ItemText}"
                            TextAlignment="Center" />
                        <TextBlock
                            Width="100"
                            Margin="55,40,5,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            FontSize="3"
                            Text="{Binding Description}"
                            TextWrapping="Wrap" />
                    </Grid>
                </StackPanel>
            </Grid>
        </DataTemplate>
    </Window.Resources>
    <syncfusion:RibbonWindow.StatusBar>
        <syncfusion:RibbonStatusBar>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Margin="10,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Foreground="{Binding Path=Foreground, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type syncfusion:RibbonStatusBar}}}">
                    Slide :
                </TextBlock>
                <TextBlock
                    Grid.Column="1"
                    Margin="10,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    DataContext="{Binding ElementName=itempreview, Path=SelectedItem}"
                    Foreground="{Binding Path=Foreground, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type syncfusion:RibbonStatusBar}}}"
                    Text="{Binding SlideNumber}" />
                <TextBlock
                    Grid.Column="2"
                    Margin="10,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Foreground="{Binding Path=Foreground, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type syncfusion:RibbonStatusBar}}}">
                    of 10
                </TextBlock>
                <TextBlock
                    Grid.Column="3"
                    Margin="10,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Foreground="{Binding Path=Foreground, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type syncfusion:RibbonStatusBar}}}">
                    English (U.S.)
                </TextBlock>
                <StackPanel Grid.Column="5" Orientation="Horizontal">
                    <RepeatButton x:Name="incrementButton">
                        <RepeatButton.Style>
                            <Style TargetType="{x:Type RepeatButton}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type RepeatButton}">
                                            <Viewbox Width="13" Height="13">
                                                <Grid Background="Transparent">
                                                    <Path
                                                        Width="16"
                                                        Height="16"
                                                        Data="M0,0L53.333,0 53.333,8.888 0,8.888z"
                                                        Fill="Gray"
                                                        RenderTransformOrigin="0.5,0.5"
                                                        Stretch="Uniform">
                                                        <Path.RenderTransform>
                                                            <TransformGroup>
                                                                <TransformGroup.Children>
                                                                    <RotateTransform Angle="0" />
                                                                    <ScaleTransform ScaleX="-1" ScaleY="-1" />
                                                                </TransformGroup.Children>
                                                            </TransformGroup>
                                                        </Path.RenderTransform>
                                                    </Path>
                                                </Grid>
                                            </Viewbox>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </RepeatButton.Style>
                    </RepeatButton>
                    <Slider
                        x:Name="zoomSlider"
                        Width="100"
                        Margin="5,0,5,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        IsSnapToTickEnabled="True"
                        Maximum="50"
                        Minimum="10"
                        TickFrequency="1"
                        Value="30">
                        <Slider.Style>
                            <Style TargetType="{x:Type Slider}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type Slider}">
                                            <Grid>
                                                <Border
                                                    x:Name="TrackBackground"
                                                    Grid.Row="1"
                                                    Height="2"
                                                    VerticalAlignment="center"
                                                    Background="LightGray"
                                                    BorderBrush="Gray"
                                                    BorderThickness="1"
                                                    CornerRadius="1">
                                                    <Canvas>
                                                        <Rectangle
                                                            x:Name="PART_SelectionRange"
                                                            Height="2.0"
                                                            Fill="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"
                                                            Stroke="{DynamicResource {x:Static SystemColors.ControlDarkDarkBrushKey}}"
                                                            StrokeThickness="1.0"
                                                            Visibility="Hidden" />
                                                    </Canvas>
                                                </Border>
                                                <Track x:Name="PART_Track" Grid.Row="1">
                                                    <Track.Thumb>
                                                        <Thumb Foreground="Gray">
                                                            <Thumb.Style>
                                                                <Style TargetType="{x:Type Thumb}">
                                                                    <Setter Property="Template">
                                                                        <Setter.Value>
                                                                            <ControlTemplate TargetType="{x:Type Thumb}">
                                                                                <Rectangle
                                                                                    Width="3"
                                                                                    Height="15"
                                                                                    Fill="{TemplateBinding Foreground}" />
                                                                            </ControlTemplate>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                </Style>
                                                            </Thumb.Style>
                                                        </Thumb>
                                                    </Track.Thumb>
                                                </Track>
                                            </Grid>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Slider.Style>
                    </Slider>
                    <RepeatButton x:Name="decrementButton">
                        <RepeatButton.Style>
                            <Style TargetType="{x:Type RepeatButton}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type RepeatButton}">
                                            <Viewbox Width="13" Height="13">
                                                <Grid Background="Transparent">
                                                    <Path
                                                        Width="16"
                                                        Height="16"
                                                        Data="M19.833,0L32.501,0 32.501,19.833999 52.334,19.833999 52.334,32.500999 32.501,32.500999 32.501,52.333 19.833,52.333 19.833,32.500999 0,32.500999 0,19.833999 19.833,19.833999z"
                                                        Fill="Gray"
                                                        RenderTransformOrigin="0.5,0.5"
                                                        Stretch="Uniform">
                                                        <Path.RenderTransform>
                                                            <TransformGroup>
                                                                <TransformGroup.Children>
                                                                    <RotateTransform Angle="0" />
                                                                    <ScaleTransform ScaleX="-1" ScaleY="-1" />
                                                                </TransformGroup.Children>
                                                            </TransformGroup>
                                                        </Path.RenderTransform>
                                                    </Path>
                                                </Grid>
                                            </Viewbox>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </RepeatButton.Style>
                    </RepeatButton>
                    <TextBlock
                        Margin="5,0,5,0"
                        VerticalAlignment="Center"
                        Text="{Binding ElementName=zoomSlider, Path=Value}" />
                </StackPanel>
            </Grid>
        </syncfusion:RibbonStatusBar>
    </syncfusion:RibbonWindow.StatusBar>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <syncfusion:Ribbon
            Name="mainRibbon"
            local:ViewModel.Ribbon="{Binding ElementName=mainRibbon}"
            BackStageColor="#D24726"
            BackStageCornerImageVisibility="Collapsed"
            BackStageHeader="FILE"
            EnableMoreCommands="False">
            <syncfusion:Ribbon.BackStage>
                <syncfusion:Backstage Name="ribbonBackStage">
                    <syncfusion:BackStageCommandButton Command="{Binding ButtonCommand}" Header="Save" />
                    <syncfusion:BackStageCommandButton Command="{Binding SaveAsCommand}" Header="Save As" />
                    <syncfusion:BackStageCommandButton Command="{Binding OpenCommand}" Header="Open" />
                    <syncfusion:BackStageCommandButton Command="{Binding CloseCommand}" Header="Close" />
                    <syncfusion:BackstageTabItem Header="Info">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <TextBlock
                                    Margin="10"
                                    FontFamily="Segoe UI"
                                    FontSize="25"
                                    Text="Info" />
                                <Grid Grid.Row="1" Margin="10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <syncfusion:RibbonButton
                                        Width="87"
                                        Height="80"
                                        Margin="5"
                                        BorderBrush="#FFA1A2A4"
                                        BorderThickness="1"
                                        Command="{Binding ButtonCommand}"
                                        Label="Security"
                                        LargeIcon="/SampleImages/security.png"
                                        SizeForm="Large"
                                        SnapsToDevicePixels="True" />
                                    <StackPanel
                                        Grid.Column="1"
                                        Margin="3"
                                        VerticalAlignment="Top">
                                        <TextBlock
                                            Grid.Column="1"
                                            Margin="3"
                                            FontWeight="Bold"
                                            Text="Permissions" />
                                        <TextBlock
                                            Grid.Column="1"
                                            Margin="3"
                                            Text="Any one can open, copy and change any part of this document."
                                            TextWrapping="Wrap" />
                                    </StackPanel>
                                </Grid>
                                <Grid Grid.Row="2" Margin="10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <syncfusion:RibbonButton
                                        Width="87"
                                        Height="80"
                                        Margin="5"
                                        BorderBrush="#FFA1A2A4"
                                        BorderThickness="1"
                                        Command="{Binding ButtonCommand}"
                                        Label="Sharing"
                                        LargeIcon="/SampleImages/sharing.png"
                                        SizeForm="Large"
                                        SnapsToDevicePixels="True" />
                                    <StackPanel
                                        Grid.Column="1"
                                        Margin="3"
                                        VerticalAlignment="Top">
                                        <TextBlock
                                            Grid.Column="1"
                                            Margin="3"
                                            FontWeight="Bold"
                                            Text="Prepare for Sharing" />
                                        <TextBlock
                                            Grid.Column="1"
                                            Margin="3"
                                            Text="Before sharing the file be aware that it contains author's name."
                                            TextWrapping="Wrap" />
                                    </StackPanel>
                                </Grid>
                                <Grid Grid.Row="3" Margin="10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <syncfusion:RibbonButton
                                        Width="87"
                                        Height="80"
                                        Margin="5"
                                        BorderBrush="#FFA1A2A4"
                                        BorderThickness="1"
                                        Command="{Binding ButtonCommand}"
                                        Label="Versions"
                                        LargeIcon="SampleImages/versions.png"
                                        SizeForm="Large"
                                        SnapsToDevicePixels="True" />
                                    <StackPanel
                                        Grid.Column="1"
                                        Margin="3"
                                        VerticalAlignment="Top">
                                        <TextBlock
                                            Grid.Column="1"
                                            Margin="3"
                                            FontWeight="Bold"
                                            Text="Manage Versions" />
                                        <TextBlock
                                            Grid.Column="1"
                                            Margin="3"
                                            Text="There are no previous versions of this file"
                                            TextWrapping="Wrap" />
                                    </StackPanel>
                                </Grid>
                            </Grid>
                            <Border
                                Grid.Column="1"
                                Margin="15"
                                HorizontalAlignment="Left"
                                BorderBrush="#FFBCBCBC"
                                BorderThickness="0.5" />
                            <Grid Grid.Column="2">
                                <Button
                                    Margin="20,10"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    Command="{Binding ReturnToEditorCommand}">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Grid>
                                                            <Border
                                                                x:Name="buttonBorder"
                                                                Background="Gray"
                                                                Opacity="0.1">
                                                                <Border.BitmapEffect>
                                                                    <BlurBitmapEffect />
                                                                </Border.BitmapEffect>
                                                            </Border>
                                                            <ContentPresenter Margin="3" />
                                                        </Grid>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="buttonBorder" Property="Opacity" Value="0.5" />
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                    <Image
                                        Width="400"
                                        Height="300"
                                        Source="/SampleImages/returnTouch.png"
                                        Stretch="Fill" />
                                </Button>
                            </Grid>
                        </Grid>
                    </syncfusion:BackstageTabItem>
                    <syncfusion:BackstageTabItem Header="Help">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <TextBlock
                                    Margin="10"
                                    FontFamily="Segoe UI"
                                    FontSize="20"
                                    Text="Syncfusion User Interface Help" />
                                <Grid Grid.Row="2" Margin="10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <syncfusion:RibbonButton
                                        Width="87"
                                        Height="80"
                                        Margin="5"
                                        BorderBrush="#FFA1A2A4"
                                        BorderThickness="1"
                                        Command="{Binding OnlineHelpCommand}"
                                        Label="Online Help"
                                        LargeIcon="SampleImages/help.png"
                                        SizeForm="Large"
                                        SnapsToDevicePixels="True" />
                                    <StackPanel
                                        Grid.Column="1"
                                        Margin="3"
                                        VerticalAlignment="Top">
                                        <TextBlock
                                            Grid.Column="1"
                                            Margin="3"
                                            FontWeight="Bold"
                                            Text="Online Help" />
                                        <TextBlock
                                            Grid.Column="1"
                                            Margin="3"
                                            Text="UG documents helps understanding the usage of our Syncfusion UI components."
                                            TextWrapping="Wrap" />
                                    </StackPanel>
                                </Grid>
                                <Grid Grid.Row="4" Margin="10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <syncfusion:RibbonButton
                                        Width="87"
                                        Height="80"
                                        Margin="5"
                                        BorderBrush="#FFA1A2A4"
                                        BorderThickness="1"
                                        Command="{Binding InHelpGettingStartedCommand}"
                                        Label="Getting Started"
                                        LargeIcon="/SampleImages/start.png"
                                        SizeForm="Large"
                                        SnapsToDevicePixels="True" />
                                    <StackPanel
                                        Grid.Column="1"
                                        Margin="3"
                                        VerticalAlignment="Top">
                                        <TextBlock
                                            Grid.Column="1"
                                            Margin="3"
                                            FontWeight="Bold"
                                            Text="Getting Started" />
                                        <TextBlock
                                            Grid.Column="1"
                                            Margin="3"
                                            Text="A complete information on Syncfusion Ribbon control and its usage."
                                            TextWrapping="Wrap" />
                                    </StackPanel>
                                </Grid>
                            </Grid>
                            <Border
                                Grid.Column="1"
                                Margin="15"
                                HorizontalAlignment="Left"
                                BorderBrush="#FFBCBCBC"
                                BorderThickness="0.5" />
                            <Grid Grid.Column="2">
                                <Button
                                    Margin="20,10"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    Command="{Binding ReturnToEditorCommand}">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Grid>
                                                            <Border
                                                                x:Name="buttonBorder"
                                                                Background="Gray"
                                                                Opacity="0.1">
                                                                <Border.BitmapEffect>
                                                                    <BlurBitmapEffect />
                                                                </Border.BitmapEffect>
                                                            </Border>
                                                            <ContentPresenter Margin="3" />
                                                        </Grid>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="buttonBorder" Property="Opacity" Value="0.5" />
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                    <Image
                                        Width="400"
                                        Height="300"
                                        Source="/SampleImages/returnTouch.png"
                                        Stretch="Fill" />
                                </Button>
                            </Grid>
                        </Grid>
                    </syncfusion:BackstageTabItem>
                    <syncfusion:BackStageCommandButton Command="{Binding BackStageExitCommand}" Header="Exit" />
                </syncfusion:Backstage>
            </syncfusion:Ribbon.BackStage>

            <syncfusion:Ribbon.QuickAccessToolBar>
                <syncfusion:QuickAccessToolBar>
                    <syncfusion:QuickAccessToolBar.QATMenuItems>
                        <syncfusion:RibbonButton syncfusion:RibbonCommandManager.SynchronizedItem="Save" Label="Save" />
                        <syncfusion:RibbonButton syncfusion:RibbonCommandManager.SynchronizedItem="Quick Print" Label="Quick Print" />
                        <syncfusion:RibbonButton syncfusion:RibbonCommandManager.SynchronizedItem="Print Preview" Label="Print Preview" />
                        <syncfusion:RibbonButton syncfusion:RibbonCommandManager.SynchronizedItem="Undo" Label="Undo" />
                        <syncfusion:RibbonButton syncfusion:RibbonCommandManager.SynchronizedItem="Redo" Label="Redo" />
                        <syncfusion:RibbonButton syncfusion:RibbonCommandManager.SynchronizedItem="Paste" Label="Paste" />
                    </syncfusion:QuickAccessToolBar.QATMenuItems>
                    <syncfusion:RibbonButton
                        syncfusion:RibbonCommandManager.SynchronizedItem="Undo"
                        Command="ApplicationCommands.Undo"
                        Label="Undo"
                        SizeForm="ExtraSmall"
                        SmallIcon="/Resources/Undo16.png"
                        ToolTip="Undo" />
                    <syncfusion:RibbonButton
                        syncfusion:RibbonCommandManager.SynchronizedItem="Redo"
                        Command="ApplicationCommands.Redo"
                        Label="Redo"
                        SizeForm="ExtraSmall"
                        SmallIcon="/Resources/Redo16.png"
                        ToolTip="Redo" />
                    <syncfusion:RibbonButton
                        syncfusion:RibbonCommandManager.SynchronizedItem="Save"
                        Command="{Binding ButtonCommand}"
                        SizeForm="ExtraSmall"
                        SmallIcon="/Resources/Save16.png" />
                    <syncfusion:RibbonButton
                        syncfusion:RibbonCommandManager.SynchronizedItem="Quick Print"
                        Label="QuickPrint"
                        SizeForm="ExtraSmall" />
                    <syncfusion:RibbonButton
                        syncfusion:RibbonCommandManager.SynchronizedItem="Print Preview"
                        Command="ApplicationCommands.PrintPreview"
                        Label="PrintPreview"
                        SizeForm="ExtraSmall" />
                    <syncfusion:SplitButton SmallIcon="/images/icon.png">
                        <StackPanel>
                            <TextBlock
                                Background="LightBlue"
                                FontSize="14"
                                Text="Optimize spacing between commands" />
                            <syncfusion:RibbonMenuItem
                                x:Name="mousemenu"
                                Height="60"
                                Margin="0,10,0,0"
                                IconSize="60 60">
                                <interactivity:Interaction.Triggers>
                                    <interactivity:EventTrigger EventName="Click">
                                        <interactivity:InvokeCommandAction Command="{Binding Path=RemoveEnableTouchCommand}" />
                                    </interactivity:EventTrigger>
                                </interactivity:Interaction.Triggers>
                                <syncfusion:RibbonMenuItem.Header>
                                    <StackPanel>
                                        <TextBlock FontWeight="Bold" Text="Mouse" />
                                        <TextBlock
                                            Width="250"
                                            Text="Standard ribbon and commands.optimize for use with ribbons."
                                            TextWrapping="Wrap" />
                                    </StackPanel>
                                </syncfusion:RibbonMenuItem.Header>
                                <syncfusion:RibbonMenuItem.Icon>
                                    <Image Source="/images/mouse.png" Stretch="Fill" />
                                </syncfusion:RibbonMenuItem.Icon>
                            </syncfusion:RibbonMenuItem>
                            <syncfusion:RibbonMenuItem
                                Height="60"
                                Margin="0,10,0,0"
                                IconSize="60 60">
                                <interactivity:Interaction.Triggers>
                                    <interactivity:EventTrigger EventName="Click">
                                        <interactivity:InvokeCommandAction Command="{Binding Path=SetEnableTouchCommand}" />
                                    </interactivity:EventTrigger>
                                </interactivity:Interaction.Triggers>
                                <syncfusion:RibbonMenuItem.Header>
                                    <StackPanel>
                                        <TextBlock FontWeight="Bold" Text="Touch" />
                                        <TextBlock
                                            Width="250"
                                            Text="Standard ribbon and commands.optimize for use with ribbons."
                                            TextWrapping="Wrap" />
                                    </StackPanel>
                                </syncfusion:RibbonMenuItem.Header>
                                <syncfusion:RibbonMenuItem.Icon>
                                    <Image Source="/images/touch.png" />
                                </syncfusion:RibbonMenuItem.Icon>
                            </syncfusion:RibbonMenuItem>
                        </StackPanel>
                    </syncfusion:SplitButton>
                </syncfusion:QuickAccessToolBar>
            </syncfusion:Ribbon.QuickAccessToolBar>
            <syncfusion:RibbonTab
                syncfusion:Ribbon.KeyTip="H"
                Caption="HOME"
                IsChecked="True">
                <syncfusion:RibbonBar
                    syncfusion:Ribbon.KeyTip="FN"
                    syncfusion:Ribbon.ShowInMoreCommands="False"
                    CollapseImage="/Resources/Paste32.png"
                    Header="Clipboard">
                    <interactivity:Interaction.Triggers>
                        <interactivity:EventTrigger EventName="LauncherClick">
                            <interactivity:InvokeCommandAction Command="{Binding Path=ButtonCommand}" />
                        </interactivity:EventTrigger>
                    </interactivity:Interaction.Triggers>
                    <syncfusion:RibbonButton
                        syncfusion:Ribbon.KeyTip="CP"
                        syncfusion:RibbonCommandManager.SynchronizedItem="Paste"
                        Command="ApplicationCommands.Paste"
                        Label="Paste"
                        LargeIcon="/Resources/Paste32.png"
                        SizeForm="Large" />
                    <syncfusion:RibbonButton
                        HorizontalAlignment="Left"
                        syncfusion:Ribbon.KeyTip="CT"
                        Command="ApplicationCommands.Cut"
                        Label="Cut"
                        SizeForm="Small"
                        SmallIcon="/Resources/Cut16.png">
                        <syncfusion:RibbonButton.ToolTip>
                            <syncfusion:ScreenTip Description="Cut (Ctrl+X)">
                                <TextBlock
                                    Width="130"
                                    HorizontalAlignment="Left"
                                    Text="Cut the selection and put it on the clipboard."
                                    TextWrapping="Wrap" />
                            </syncfusion:ScreenTip>
                        </syncfusion:RibbonButton.ToolTip>
                    </syncfusion:RibbonButton>
                    <syncfusion:RibbonButton
                        HorizontalAlignment="Left"
                        syncfusion:Ribbon.KeyTip="CY"
