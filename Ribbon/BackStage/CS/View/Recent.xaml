<UserControl
    x:Class="BackStageSample.Recent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:BackStageSample"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf">
    <UserControl.DataContext>
        <local:ViewModel />
    </UserControl.DataContext>
    <Grid Margin="20,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width=".5*" />
            <ColumnDefinition Width="5*" />
        </Grid.ColumnDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel>
                <TextBlock
                    Margin="0,10"
                    FontSize="16"
                    FontWeight="Bold"
                    Text="Recent Documents" />
                <Rectangle
                    Grid.Row="1"
                    Height="1"
                    Stroke="LightGray"
                    StrokeDashArray="1"
                    StrokeThickness="1" />
            </StackPanel>
            <Grid Grid.Row="1" Margin="0,25,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock Text="Click to view recently edited files." />
                <syncfusion:ButtonAdv
                    Grid.Row="1"
                    Width="100"
                    Height="70"
                    Margin="0,10,0,10"
                    HorizontalAlignment="Left"
                    Command="{Binding Path=ButtonCommand}"
                    IconWidth="32"
                    Label="Recent files"
                    LargeIcon="../Resources/Open32.png"
                    SizeMode="Large" />
            </Grid>
            <Grid Grid.Row="2" Margin="0,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <syncfusion:RibbonCheckBox
                    x:Name="RecentTabBackStageClose"
                    Margin="0,10"
                    syncfusion:Ribbon.KeyTip="Q"
                    Content="Cancel Backstage Closing"
                    IsChecked="{Binding RecentBackStageCheckBoxProperty}" />
                <syncfusion:ButtonAdv
                    Grid.Row="1"
                    Height="30"
                    HorizontalAlignment="Left"
                    Command="{Binding Path=InRecentTabCloseBackStageCommand}"
                    IconHeight="0"
                    IsMultiLine="False"
                    Label="Close Backstage" />
            </Grid>
        </Grid>
        <Border
            Grid.Column="1"
            Width="2"
            Background="LightGray" />
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel>
                <TextBlock
                    Margin="0,10"
                    FontSize="16"
                    FontWeight="Bold"
                    Text="Recent Places" />
                <Rectangle
                    Grid.Row="1"
                    Height="1"
                    Stroke="LightGray"
                    StrokeDashArray="1"
                    StrokeThickness="1" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
