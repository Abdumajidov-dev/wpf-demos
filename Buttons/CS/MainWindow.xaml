<Window
    x:Class="Button_Controls.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:interactivity="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
    xmlns:local="clr-namespace:Button_Controls"
    xmlns:skinManager="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    x:Name="mainWindow"
    Title="Buttons"
    Width="1169"
    Height="652"
    skinManager:SfSkinManager.VisualStyle="{Binding ElementName=stylesComboBox, Path=SelectedValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
    Icon="Images/App.ico"
    WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <local:ViewModel />
    </Window.DataContext>
    <Window.Resources>
        <ObjectDataProvider
            x:Key="Themes"
            MethodName="GetValues"
            ObjectType="{x:Type system:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="skinManager:VisualStyles" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <DataTemplate x:Key="DefaultTemplate">
            <StackPanel Orientation="Horizontal">
                <Image
                    Width="20"
                    Height="20"
                    Source="{Binding Path=ImagePath}" />
                <TextBlock Margin="5,5" Text="{Binding Path=Name}" />
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height=".5*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock
            Grid.Row="2"
            Grid.Column="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            TextAlignment="Center">
            <Span FontWeight="SemiBold">Button</Span>
        </TextBlock>
        <TextBlock
            Grid.Row="2"
            Grid.Column="2"
            VerticalAlignment="Center"
            TextAlignment="Center">
            <Span FontWeight="SemiBold">DropDownButton</Span>
        </TextBlock>
        <TextBlock
            Grid.Row="2"
            Grid.Column="3"
            VerticalAlignment="Center"
            TextAlignment="Center">
            <Span FontWeight="SemiBold">SplitButton</Span>
        </TextBlock>
        <TextBlock
            Grid.ColumnSpan="5"
            Margin="10"
            HorizontalAlignment="Left"
            FontSize="16"
            FontWeight="Thin"
            Text="The following sample demonstrates the default functionalities of Button, DropDownButton, SplitButton and it's customization." />
        <TextBlock
            Grid.Row="3"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            TextAlignment="Left">
            <Span FontWeight="SemiBold">SizeMode :</Span>
            Small</TextBlock>
        <syncfusion:ButtonAdv
            Name="smallButtonAdv"
            Grid.Row="3"
            Grid.Column="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Command="{Binding ButtonCommand}"
            Label="Button"
            LargeIcon="Images\userlarge.png"
            SizeMode="Small"
            SmallIcon="Images\usersmall.png"
            Tag="Small" />
        <syncfusion:DropDownButtonAdv
            x:Name="dropDownButtonAdv"
            Grid.Row="3"
            Grid.Column="2"
            Label="Country"
            LargeIcon="Images\flaglarge.png"
            SizeMode="Small"
            SmallIcon="Images\flagsmall.png">
            <ListBox
                Name="smallDropDown"
                BorderThickness="0"
                ItemTemplate="{StaticResource DefaultTemplate}"
                ItemsSource="{Binding Path=CountryDetails}">
                <interactivity:Interaction.Triggers>
                    <interactivity:EventTrigger EventName="SelectionChanged">
                        <interactivity:InvokeCommandAction Command="{Binding Path=DropDownCommand}" />
                    </interactivity:EventTrigger>
                </interactivity:Interaction.Triggers>
            </ListBox>
        </syncfusion:DropDownButtonAdv>
        <syncfusion:SplitButtonAdv
            x:Name="splitButtonAdv"
            Grid.Row="3"
            Grid.Column="3"
            Command="{Binding ButtonCommand}"
            Label="Colors"
            LargeIcon="Images\color.png"
            SizeMode="Small"
            SmallIcon="Images\color.png">
            <ListBox
                Name="smallSplit"
                BorderThickness="0"
                ItemTemplate="{StaticResource DefaultTemplate}"
                ItemsSource="{Binding Path=ColorDetails}">
                <interactivity:Interaction.Triggers>
                    <interactivity:EventTrigger EventName="SelectionChanged">
                        <interactivity:InvokeCommandAction Command="{Binding Path=DropDownCommand}" />
                    </interactivity:EventTrigger>
                </interactivity:Interaction.Triggers>
            </ListBox>
        </syncfusion:SplitButtonAdv>
        <TextBlock
            Grid.Row="4"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"><Span FontWeight="SemiBold">SizeMode :</Span>
            Normal</TextBlock>
        <syncfusion:ButtonAdv
            Name="normalButtonAdv"
            Grid.Row="4"
            Grid.Column="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Command="{Binding ButtonCommand}"
            Label="Button"
            LargeIcon="Images\userlarge.png"
            SizeMode="Normal"
            SmallIcon="Images\usersmall.png"
            Tag="Normal" />
        <syncfusion:DropDownButtonAdv
            Grid.Row="4"
            Grid.Column="2"
            Label="Country"
            LargeIcon="Images\flaglarge.png"
            SizeMode="Normal"
            SmallIcon="Images\flagsmall.png">
            <ListBox
                Name="normalDropDown"
                BorderThickness="0"
                ItemTemplate="{StaticResource DefaultTemplate}"
                ItemsSource="{Binding Path=CountryDetails}">
                <interactivity:Interaction.Triggers>
                    <interactivity:EventTrigger EventName="SelectionChanged">
                        <interactivity:InvokeCommandAction Command="{Binding Path=DropDownCommand}" />
                    </interactivity:EventTrigger>
                </interactivity:Interaction.Triggers>
            </ListBox>
        </syncfusion:DropDownButtonAdv>
        <syncfusion:SplitButtonAdv
            x:Name="normalSplitButton"
            Grid.Row="4"
            Grid.Column="3"
            Command="{Binding ButtonCommand}"
            Label="Colors"
            LargeIcon="Images\color.png"
            SizeMode="Normal"
            SmallIcon="Images\color.png">
            <ListBox
                Name="normalSplitDropDown"
                BorderThickness="0"
                ItemTemplate="{StaticResource DefaultTemplate}"
                ItemsSource="{Binding Path=ColorDetails}">
                <interactivity:Interaction.Triggers>
                    <interactivity:EventTrigger EventName="SelectionChanged">
                        <interactivity:InvokeCommandAction Command="{Binding Path=DropDownCommand}" />
                    </interactivity:EventTrigger>
                </interactivity:Interaction.Triggers>
            </ListBox>
        </syncfusion:SplitButtonAdv>
        <TextBlock
            Grid.Row="5"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"><Span FontWeight="SemiBold">SizeMode :</Span>
            Large</TextBlock>
        <syncfusion:ButtonAdv
            x:Name="largeButton"
            Grid.Row="5"
            Grid.Column="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Command="{Binding ButtonCommand}"
            Label="Button"
            LargeIcon="Images\userlarge.png"
            SizeMode="Large"
            SmallIcon="Images\usersmall.png" />
        <syncfusion:DropDownButtonAdv
            Grid.Row="5"
            Grid.Column="2"
            Label="Country"
            LargeIcon="Images\flaglarge.png"
            SizeMode="Large"
            SmallIcon="Images\flagsmall.png">
            <ListBox
                Name="buttonDropdown"
                BorderThickness="0"
                ItemTemplate="{StaticResource DefaultTemplate}"
                ItemsSource="{Binding Path=CountryDetails}">
                <interactivity:Interaction.Triggers>
                    <interactivity:EventTrigger EventName="SelectionChanged">
                        <interactivity:InvokeCommandAction Command="{Binding Path=DropDownCommand}" />
                    </interactivity:EventTrigger>
                </interactivity:Interaction.Triggers>
            </ListBox>
        </syncfusion:DropDownButtonAdv>
        <syncfusion:SplitButtonAdv
            x:Name="largeSplitButton"
            Grid.Row="5"
            Grid.Column="3"
            Command="{Binding ButtonCommand}"
            Label="Colors"
            LargeIcon="Images\color.png"
            SizeMode="Large"
            SmallIcon="Images\color.png">
            <ListBox
                Name="LargeSplit"
                BorderThickness="0"
                ItemTemplate="{StaticResource DefaultTemplate}"
                ItemsSource="{Binding Path=ColorDetails}">
                <interactivity:Interaction.Triggers>
                    <interactivity:EventTrigger EventName="SelectionChanged">
                        <interactivity:InvokeCommandAction Command="{Binding Path=DropDownCommand}" />
                    </interactivity:EventTrigger>
                </interactivity:Interaction.Triggers>
            </ListBox>
        </syncfusion:SplitButtonAdv>
        <StackPanel
            Grid.Row="1"
            Grid.Column="3"
            Orientation="Horizontal">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontWeight="SemiBold"
                Text="Select Theme : " />
            <ComboBox
                x:Name="stylesComboBox"
                Width="150"
                VerticalAlignment="Center"
                ItemsSource="{Binding Source={StaticResource ResourceKey=Themes}}"
                SelectedIndex="18" />
        </StackPanel>
    </Grid>
</Window>
